<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linear_layout"
        android:gravity = "center">


    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:hint="Введіть предмет, з яйого бажаєте перескласти іспит(залік)"
        android:inputType="text"/>
    <TextView
        android:id="@+id/txtViewAppExam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Що ви змінюєте?"
        android:textSize="20dp" />
    <Spinner
        android:id="@+id/spinnerAppExam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/txtView"/>
    <Button
        android:id="@+id/buttonApp"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:text="Далі" />
</LinearLayout>


</LinearLayout>