<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ua.edu.deanoffice.mobile.studentchdtu">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/CHDTU.AcitivityBackground"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".activities.MainMenuActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity android:name=".activities.ChooseApplicationActivity" />
        <activity
            android:name=".activities.ExamApplicationActivity"
            android:label="@string/title_activity_exam_application" />
        <activity android:name=".activities.DeducApplicationActivity" />
        <activity android:name=".activities.RetakeApplicationActivity" />
        <activity android:name=".activities.RenewApplicationActivity" />
        <activity android:name=".activities.SelectiveCoursesTestActivity" />
        <activity android:name=".activities.LoginActivity"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>