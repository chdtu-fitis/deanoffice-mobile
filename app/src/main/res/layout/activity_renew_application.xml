<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ua.edu.chdtu.deanoffice.mobile.myapplication.ExamApplicationActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linear_layout"
        android:gravity = "center">

    <!--EditText with id editText-->

    <!--Button with id showInput-->

    <EditText
        android:id="@+id/editDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:hint="Введіть дату з якої ви хочете поновитись\n у склад здобувачів вищої освіти після\n академічної відпустки"
        android:inputType="date"/>

    <Button
        android:id="@+id/buttonNext"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:text="Далі" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
